{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "srcDir": "./",
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "moment"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
